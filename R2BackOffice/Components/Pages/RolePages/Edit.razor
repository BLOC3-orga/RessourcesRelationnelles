@page "/roles/edit"
@using Microsoft.EntityFrameworkCore
@using R2Model.Entities
@inject IDbContextFactory<R2Model.Context.R2DbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Role</h2>
<hr />
@if (Role is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Role" OnValidSubmit="UpdateRole" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Role.Id" value="@Role.Id" />
                <div class="mb-3">
                    <label for="label" class="form-label">Label:</label>
                    <InputText id="label" @bind-Value="Role.Label" class="form-control" />
                    <ValidationMessage For="() => Role.Label" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/roles">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Role? Role { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Role ??= await context.Role.FirstOrDefaultAsync(m => m.Id == Id);

        if (Role is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateRole()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Role!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!RoleExists(Role!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/roles");
    }

    private bool RoleExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Role.Any(e => e.Id == id);
    }
}
